#include <dt-bindings/zmk/matrix_transform.h>

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		label = "KSCAN";

		diode-direction = "col2row";
		row-gpios
			= <&gpio0 30 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio0 31 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio0 2  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio0 28 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio1 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio0 3  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			, <&gpio1 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
			;
		col-gpios
			= <&gpio0 15 GPIO_ACTIVE_HIGH>
			, <&gpio0 17 GPIO_ACTIVE_HIGH>
			, <&gpio0 9  GPIO_ACTIVE_HIGH>
			;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <10>;
		rows = <5>;
// OLD
// | MX8  | MX9  | MX17 | MX18 | MX25 |  MX33 | MX34 | MX42 | MX43 | MX50 | MX58 | MX59 | MX67 | MX68 | MX75 | 
// | MX6  | MX7  | MX15 | MX16 | MX24 |  MX31 | MX32 | MX40 | MX41 | MX49 | MX56 | MX57 | MX65 | MX66 | MX74 | 
// | MX4  | MX5  | MX13 | MX14 | MX23 |  MX29 | MX30 | MX38 | MX39 | MX48 | MX54 | MX55 | MX63 | MX64 | MX73 |
// | MX2  | MX3  | MX12 | MX21 | MX22 |  MX27 | MX28 | MX37 | MX46 | MX47 | MX52 | MX53 | MX62 | MX71 | MX72 |
// | MX1  | MX10 | MX11 | MX19 | MX20 |  MX26 | MX35 | MX36 | MX44 | MX45 | MX51 | MX60 | MX61 | MX69 | MX70 |

// NEW
// | MX1  | MX2  | MX4  | MX6  | MX8  | MX26 | MX27 | MX29 | MX31 | MX33
// | MX10 | MX3  | MX5  | MX7  | MX9  | MX35 | MX28 | MX30 | MX32 | MX34
// | MX11 | MX12 | MX13 | MX15 | MX17 | MX36 | MX37 | MX38 | MX40 | MX42
// | MX19 | MX21 | MX14 | MX16 | MX18 | MX44 | MX46 | MX39 | MX41 | MX43
// | MX20 | MX22 | MX23 | MX24 | MX25 | MX45 | MX47 | MX48 | MX49 | MX50
        map = <
		// OLD
// RC(7,0) RC(8,0) RC(7,1) RC(8,1) RC(6,2)   RC(7,3) RC(8,3) RC(7,4) RC(8,4) RC(6,5)
// RC(5,0) RC(6,0) RC(5,1) RC(6,1) RC(5,2)   RC(5,3) RC(6,3) RC(5,4) RC(6,4) RC(5,5)
// RC(3,0) RC(4,0) RC(3,1) RC(4,1) RC(4,2)   RC(3,3) RC(4,3) RC(3,4) RC(4,4) RC(4,5)
// RC(1,0) RC(2,0) RC(2,1) RC(2,2) RC(3,2)   RC(1,3) RC(2,3) RC(2,4) RC(2,5) RC(3,5)
// RC(0,0) RC(0,1) RC(1,1) RC(0,2) RC(1,2)   RC(0,3) RC(0,4) RC(1,4) RC(0,5) RC(1,5)
		// NEW
RC(0,0) RC(1,0) RC(3,0) RC(5,0) RC(7,0) RC(0,3) RC(1,3) RC(3,3) RC(5,3) RC(7,3)
RC(0,1) RC(2,0) RC(4,0) RC(6,0) RC(8,0) RC(0,4) RC(2,3) RC(4,3) RC(6,3) RC(8,3)
RC(1,1) RC(2,1) RC(3,1) RC(5,1) RC(7,1) RC(1,4) RC(2,4) RC(3,4) RC(5,4) RC(7,4)
RC(0,2) RC(2,2) RC(4,1) RC(6,1) RC(8,1) RC(0,5) RC(2,5) RC(4,4) RC(6,4) RC(8,4)
RC(1,2) RC(3,2) RC(4,2) RC(5,2) RC(6,2) RC(1,5) RC(3,5) RC(4,5) RC(5,5) RC(6,5)
        >;
	};
};

